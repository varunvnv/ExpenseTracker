<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.varun.project">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".scan_bill_activity"
            android:parentActivityName=".scan_bill_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.varun.project.MainActivity" />
        </activity>
        <activity
            android:name=".see_bills_activity"
            android:parentActivityName=".see_bills_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.varun.project.MainActivity" />
        </activity>
        <activity
            android:name=".see_expenses_activity"
            android:parentActivityName=".see_expenses_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.varun.project.MainActivity" />
        </activity>
        <activity
            android:name=".see_prediction_activity"
            android:parentActivityName=".see_prediction_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.varun.project.MainActivity" />
        </activity>
        <activity
            android:name="com.example.lib.MainActivity"
            android:exported="true"
            android:label="LibMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
            </intent-filter>
        </activity>
        <activity android:name=".add_bill_activity"></activity>
    </application>

</manifest>